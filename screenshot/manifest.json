{
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "128": "images/icons/128x128.png",
      "48": "images/icons/48x48.png",
      "16": "images/icons/16x16.png"
    },
    "default_popup": "app/index.html#popup",
    "default_title": "CDA Evidence ScreenShot"
  },
  "content_scripts": [
    {
      "js": [
        "js/hotkeys.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "take_screen_shot_upload": {
      "description": "ScreenShot and Upload",
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      }
    },
    "take_screen_shot_edit": {
      "description": "ScreenShot and Edit",
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      }
    },
    "capture_window_and_upload": {
      "description": "Capture Window and Edit",
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      }
    },
    "capture_window_and_edit": {
      "description": "Capture Window and Edit",
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      }
    }
  },
  "description": "This application is designed to capture screenshots as evidence as part of CDA application process.",
  "homepage_url": "https://gopinath.us",
  "short_name": "cda evidence screenshots",
  "icons": {
    "128": "images/icons/128x128.png",
    "48": "images/icons/48x48.png",
    "16": "images/icons/16x16.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "43",
  "name": "CDA Evidence Screenshots",
  "offline_enabled": true,
  "options_page": "app/index.html",
  "incognito": "spanning",
  "permissions": [
    "*://*/*",
    "cookies",
    "<all_urls>",
    "downloads",
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "identity",
    "desktopCapture",
    "tabCapture"
  ],
  "update_url": "http://clients2.google.com/service/update2/crx",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "version": "1.0.0",
  "externally_connectable": {
    "matches": ["*://*/*"]
  },
  "web_accessible_resources": [
    "favicon.png",
    "print.html",
    "video.html",
    "media_access/*",
    "fonts/*",
    "images/*",
    "app/*",
    "css/*",
    "template/*"
  ]
}
